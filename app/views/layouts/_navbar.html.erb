<div class="ui large inverted menu">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class:"item" %>
    <%= link_to "People", users_path, class:"item" %>
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to "My profile", user_path(current_user), class:"item" %>
            <%= link_to "Edit", edit_user_path(current_user), class:"item" %>
            <hr>
            <%= link_to "Log out", logout_path, method: :delete, class:"item" %>
          <% else %>
            <%= link_to "Log in", login_path, class:"item" %>
          <% end %>
        </div>
      </div>
      <% if logged_in? %>
      <div class="item">
          <%= link_to "Log out", logout_path, method: :delete, class:"ui primary button" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
