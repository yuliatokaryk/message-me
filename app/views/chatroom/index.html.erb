<h2 class="ui center aligned icon header">
  <i class="circular blue comment alternate icon"></i>
  Chatroom
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui small feed" id="message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: "Write a message..." %>
              <%= f.button '<i class="bordered inverted orange edit icon "></i>'.html_safe, class: "icon-message" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column ">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui vertical menu">
          <a class="active teal item">
            Messages in chat:
            <div class="ui teal left pointing label"><%= @messages.count %></div>
          </a>
          <a class="item">
            People in chat
            <div class="ui label"><%= @users.count %></div>
          </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
